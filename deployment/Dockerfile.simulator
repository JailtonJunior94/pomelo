# ─── Stage 1: build ───────────────────────────────────────────────────────────
FROM golang:1.25-alpine AS builder

WORKDIR /src

COPY go.mod ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 go build -trimpath -ldflags="-s -w" -o /out/simulator ./cmd/simulator

# ─── Stage 2: runtime ─────────────────────────────────────────────────────────
FROM scratch

COPY --from=builder /out/simulator /simulator

ENTRYPOINT ["/simulator"]
